// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

model Job {
  id       Int    @default(autoincrement())
  user_id  String @id @unique @default(cuid())
  name     String
  email    String @unique()
  phone    String
  password String
}

model Token {
  id           Int    @id @default(autoincrement())
  user_id      Int
  refreshtoken String
}

model Joblist {
  id         Int      @id @default(autoincrement())
  title      String
  company    String
  location   String
  experience Int
  skills     String[]
  url        String
}
